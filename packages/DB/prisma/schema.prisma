generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model User{
  id String @id @default(uuid())
  email String @unique
}

model Website{
  id String @id @default(uuid())
  url String @unique
  userId String
  disabled Boolean @default(false)
  ticks WebsiteTick[]
}

model Validator{
  id String @id @default(uuid())
  publicKey String
  location String
  ip String
  ticks WebsiteTick[]
}

model WebsiteTick{
  id String @id @default(uuid())
  websiteId String
  validatorId String
  status WebsiteStatus
  latency Float
  createdAt DateTime @default(now())
  Website Website @relation(fields: [websiteId], references: [id])
  Validator Validator @relation(fields: [validatorId], references: [id])
}

enum WebsiteStatus{
 Good
 Bad
 Unknown
}